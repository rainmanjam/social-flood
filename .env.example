# .env file
API_KEY=your-api-key-here

ENABLE_CACHE=true
ENABLE_PROXY=false
PROXY_URL=http://your-proxy-url:port
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/social_flood

X_BEARER_TOKEN=

# Input Sanitization settings
INPUT_SANITIZATION_ENABLED=true
MAX_QUERY_LENGTH=200
ALLOWED_CHARACTERS_PATTERN=^[a-zA-Z0-9\s\-\.\,\?\!\(\)\[\]\{\}\'\"]+$
BLOCK_SUSPICIOUS_PATTERNS=true
SUSPICIOUS_PATTERNS=["<script","javascript:","onload=","onerror=","eval(","alert("]
