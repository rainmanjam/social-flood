# Social Flood API Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# API Configuration
# =============================================================================
API_KEY=your-secure-api-key-here

# =============================================================================
# Database Configuration
# =============================================================================
POSTGRES_USER=social_flood_user
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=social_flood
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@db:5432/${POSTGRES_DB}

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_PASSWORD=your-secure-redis-password-here
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# =============================================================================
# Caching Configuration
# =============================================================================
ENABLE_CACHE=true
CACHE_TTL=3600

# =============================================================================
# Proxy Configuration
# =============================================================================
ENABLE_PROXY=false
PROXY_URLS=

# =============================================================================
# Security Configuration
# =============================================================================
SECRET_KEY=your-secure-secret-key-minimum-32-characters-here
CORS_ORIGINS=["http://localhost:3000"]

# =============================================================================
# External API Keys (Optional)
# =============================================================================
X_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET_KEY=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# DataForSEO API credentials (Optional)
DATAFORSEO_LOGIN=
DATAFORSEO_PASSWORD=

# =============================================================================
# Input Sanitization Settings
# =============================================================================
INPUT_SANITIZATION_ENABLED=true
MAX_QUERY_LENGTH=200
ALLOWED_CHARACTERS_PATTERN=^[a-zA-Z0-9\s\-\.\,\?\!\(\)\[\]\{\}\'\"]+$
BLOCK_SUSPICIOUS_PATTERNS=true
# Note: Patterns to block XSS and injection attacks
SUSPICIOUS_PATTERNS=["<script","javascript:","onload=","onerror=","alert("]

# =============================================================================
# Connection Pool Settings
# =============================================================================
HTTP_CONNECTION_POOL_SIZE=20
HTTP_MAX_KEEPALIVE_CONNECTIONS=10
HTTP_MAX_CONNECTIONS_PER_HOST=5
HTTP_CONNECTION_TIMEOUT=10.0
HTTP_READ_TIMEOUT=30.0

# =============================================================================
# Batch Processing Settings
# =============================================================================
BATCH_PROCESSING_ENABLED=true
BATCH_SIZE=50
BATCH_TIMEOUT=60.0
MAX_CONCURRENT_BATCHES=3

# =============================================================================
# Autocomplete Settings
# =============================================================================
AUTOCOMPLETE_MAX_PARALLEL_REQUESTS=10
AUTOCOMPLETE_REQUEST_TIMEOUT=30
AUTOCOMPLETE_MAX_RETRIES=3
AUTOCOMPLETE_RETRY_DELAY=1.0

# =============================================================================
# Response Metadata Settings
# =============================================================================
RESPONSE_METADATA_ENABLED=true
INCLUDE_REQUEST_TIMING=true
INCLUDE_CONNECTION_INFO=true
INCLUDE_CACHE_INFO=true
INCLUDE_RATE_LIMIT_INFO=true
