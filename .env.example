# =============================================================================
# Social Flood API - Environment Configuration
# =============================================================================
# This file contains all available environment variables for configuring
# the Social Flood API. Copy this file to .env and customize the values.
#
# Usage:
#   cp .env.example .env
#   # Edit .env with your actual values
#
# Security Note: Never commit your actual .env file to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# Application environment (development, staging, production)
ENVIRONMENT=development

# Enable debug mode (true/false) - Do NOT use in production!
DEBUG=false

# Project metadata
PROJECT_NAME=Social Flood
VERSION=1.6.0
DESCRIPTION=API for social media data aggregation and analysis

# Server configuration
HOST=0.0.0.0
PORT=8000

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------

# API Keys - Comma-separated list of valid API keys
# Generate secure keys using: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=your-api-key-1,your-api-key-2,your-api-key-3

# Enable/disable API key authentication (true/false)
ENABLE_API_KEY_AUTH=true

# Secret key for cryptographic operations (CHANGE IN PRODUCTION!)
# Generate using: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=development-secret-key-change-in-production-use-a-long-random-string

# Bearer token for external API authentication (optional)
X_BEARER_TOKEN=

# Twitter/X API credentials (optional, for future integrations)
TWITTER_API_KEY=
TWITTER_API_SECRET_KEY=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# Google Ads API credentials
# See docs/GOOGLE_ADS_SETUP.md for detailed setup instructions
# Required for keyword research, campaign data, and combined analytics

# Enable/disable Google Ads features
GOOGLE_ADS_ENABLED=false

# Developer token from Google Ads API Center (https://ads.google.com/aw/apicenter)
# Test token format: ABcdEFghIJklMNopQRstUVwx
GOOGLE_ADS_DEVELOPER_TOKEN=

# OAuth 2.0 Client ID from Google Cloud Console
# Format: 123456789-abc123def456.apps.googleusercontent.com
GOOGLE_ADS_CLIENT_ID=

# OAuth 2.0 Client Secret from Google Cloud Console
# Format: GOCSPX-abcdefghijklmnop
GOOGLE_ADS_CLIENT_SECRET=

# OAuth 2.0 Refresh Token (generate using setup script in docs/GOOGLE_ADS_SETUP.md)
# Format: 1//0abcdefghijklmnopqrstuvwxyz
GOOGLE_ADS_REFRESH_TOKEN=

# Primary Google Ads Customer ID (10 digits, no hyphens)
# Find in Google Ads: Top right corner, format XXX-XXX-XXXX, use as XXXXXXXXXX
GOOGLE_ADS_CUSTOMER_ID=

# Optional: Manager (MCC) Account Customer ID (for managing multiple accounts)
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# Optional: Multiple customer IDs (comma-separated, for multi-account support)
# Example: GOOGLE_ADS_CUSTOMER_IDS=1234567890,9876543210,5555555555
GOOGLE_ADS_CUSTOMER_IDS=

# Use proto-plus messages (recommended: true)
GOOGLE_ADS_USE_PROTO_PLUS=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------

# Enable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Number of requests allowed per timeframe
RATE_LIMIT_REQUESTS=100

# Timeframe for rate limiting (in seconds)
RATE_LIMIT_TIMEFRAME=3600

# -----------------------------------------------------------------------------
# Caching Configuration
# -----------------------------------------------------------------------------

# Enable caching (true/false)
ENABLE_CACHE=true

# Cache time-to-live (in seconds)
CACHE_TTL=3600

# Redis connection URL
# Format: redis://[:password]@host:port/db
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------

# PostgreSQL connection URL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@db:5432/social_flood

# -----------------------------------------------------------------------------
# Proxy Configuration
# -----------------------------------------------------------------------------

# Enable proxy for external requests (true/false)
ENABLE_PROXY=false

# Proxy server URL
# Examples:
#   - HTTP: http://proxy-host:8080
#   - HTTPS: https://proxy-host:8080
#   - SOCKS5: socks5://proxy-host:1080
#   - With auth: http://user:pass@proxy-host:8080
PROXY_URL=

# Alternative proxy URLs (comma-separated, for rotation)
PROXY_URLS=

# -----------------------------------------------------------------------------
# CORS Configuration
# -----------------------------------------------------------------------------

# Allowed origins (comma-separated, or "*" for all)
CORS_ORIGINS=*

# Allowed HTTP methods (comma-separated, or "*" for all)
CORS_METHODS=*

# Allowed headers (comma-separated, or "*" for all)
CORS_HEADERS=*

# -----------------------------------------------------------------------------
# Input Sanitization
# -----------------------------------------------------------------------------

# Enable input sanitization (true/false)
INPUT_SANITIZATION_ENABLED=true

# Maximum query string length
MAX_QUERY_LENGTH=200

# Allowed characters pattern (regex)
ALLOWED_CHARACTERS_PATTERN=^[a-zA-Z0-9\s\-\.\,\?\!\(\)\[\]\{\}\'\"]+$

# Block suspicious patterns (true/false)
BLOCK_SUSPICIOUS_PATTERNS=true

# Suspicious patterns to block (JSON array)
SUSPICIOUS_PATTERNS=["<script","javascript:","onload=","onerror=","eval(","alert("]

# -----------------------------------------------------------------------------
# Google Autocomplete Settings
# -----------------------------------------------------------------------------

# Maximum parallel requests for autocomplete
AUTOCOMPLETE_MAX_PARALLEL_REQUESTS=10

# Request timeout (in seconds)
AUTOCOMPLETE_REQUEST_TIMEOUT=30

# Maximum retry attempts
AUTOCOMPLETE_MAX_RETRIES=3

# Retry delay (in seconds)
AUTOCOMPLETE_RETRY_DELAY=1.0

# -----------------------------------------------------------------------------
# HTTP Connection Pooling
# -----------------------------------------------------------------------------

# HTTP connection pool size
HTTP_CONNECTION_POOL_SIZE=20

# Maximum keepalive connections
HTTP_MAX_KEEPALIVE_CONNECTIONS=10

# Maximum connections per host
HTTP_MAX_CONNECTIONS_PER_HOST=5

# Connection timeout (in seconds)
HTTP_CONNECTION_TIMEOUT=10.0

# Read timeout (in seconds)
HTTP_READ_TIMEOUT=30.0

# -----------------------------------------------------------------------------
# Batch Processing
# -----------------------------------------------------------------------------

# Enable batch processing (true/false)
BATCH_PROCESSING_ENABLED=true

# Batch size
BATCH_SIZE=50

# Batch timeout (in seconds)
BATCH_TIMEOUT=60.0

# Maximum concurrent batches
MAX_CONCURRENT_BATCHES=3

# -----------------------------------------------------------------------------
# Response Metadata
# -----------------------------------------------------------------------------

# Enable response metadata (true/false)
RESPONSE_METADATA_ENABLED=true

# Include request timing in metadata
INCLUDE_REQUEST_TIMING=true

# Include connection info in metadata
INCLUDE_CONNECTION_INFO=true

# Include cache info in metadata
INCLUDE_CACHE_INFO=true

# Include rate limit info in metadata
INCLUDE_RATE_LIMIT_INFO=true

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------

# Enable Prometheus metrics endpoint (true/false)
ENABLE_METRICS=true

# Metrics endpoint path
METRICS_PATH=/metrics

# Enable detailed health checks (true/false)
ENABLE_DETAILED_HEALTH_CHECKS=true

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log format (json, text)
LOG_FORMAT=text

# Enable structured logging (true/false)
STRUCTURED_LOGGING=false

# -----------------------------------------------------------------------------
# Docker & Container Settings
# -----------------------------------------------------------------------------

# These are primarily used in docker-compose.yml

# PostgreSQL settings
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=social_flood

# Redis settings
REDIS_PASSWORD=

# -----------------------------------------------------------------------------
# Development & Testing
# -----------------------------------------------------------------------------

# Enable hot reload (for development only)
RELOAD=false

# Enable test mode (true/false)
TEST_MODE=false

# Test database URL (for running tests)
TEST_DATABASE_URL=postgresql://user:password@localhost:5432/social_flood_test

# -----------------------------------------------------------------------------
# Optional: External Service API Keys
# -----------------------------------------------------------------------------

# Google API credentials (for future use)
GOOGLE_API_KEY=
GOOGLE_APPLICATION_CREDENTIALS=

# Other service API keys (add as needed)
# SOME_SERVICE_API_KEY=
# ANOTHER_SERVICE_TOKEN=

# =============================================================================
# End of Configuration
# =============================================================================
